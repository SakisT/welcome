@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model welcome.Models.Reservation


<form asp-action="Edit">
    <div class="form-horizontal" style="padding-top:10px;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="id" />
        <input type="hidden" asp-for="HotelID" />

        <div class="input-group">
                <span class="input-group-addon" id="reservationnumberlabel">AA</span>
                <input asp-for="AA" class="form-control" aria-describedby="reservationnumberlabel" style="width:80px">
                <span asp-validation-for="AA" class="text-danger" />

                <span class="input-group-addon" id="GuestOrGroupLabel">Guest</span>
                <input asp-for="GuestOrGroup" class="form-control" aria-describedby="GuestOrGroupLabel" style="width:400px">
                <span asp-validation-for="GuestOrGroup" class="text-danger" />

        </div>

        <div class="input-group">

        </div>

        <div class="form-group">
            <label asp-for="AskPrePay" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AskPrePay" class="form-control" />
                <span asp-validation-for="AskPrePay" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AskPrePayDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AskPrePayDate" class="form-control" />
                <span asp-validation-for="AskPrePayDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AskPrePayRemarks" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="AskPrePayRemarks" class="form-control" />
                <span asp-validation-for="AskPrePayRemarks" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Remarks" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Remarks" class="form-control" />
                <span asp-validation-for="Remarks" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
