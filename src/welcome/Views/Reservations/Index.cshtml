@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<welcome.Models.Reservation>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="fullpage">
    <div class="row">
        <div id="reservations-list" class="col-md-4">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>AA</th>
                        <th>Reservation</th>
                        <th>Date</th>
                        <th>Rooms</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.AA</td>
                            <td>@item.GuestOrGroup</td>
                            <td>@item.StayRooms.FirstOrDefault().Arrival</td>
                            <td>@item.StayRooms.Count()</td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
        <div id="reservation-data" class="col-md-8">
            test
        </div>
    </div>
</div>



