@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model welcome.Models.Room

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Create</h4>

<form asp-action="Create">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="BranchID" />
        <div class="form-group">
            <label asp-for="Number" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Number" class="form-control" autofocus />
                <span asp-validation-for="Number" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RoomTypeID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="RoomTypeID" class ="form-control" asp-items="ViewBag.RoomTypeID"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DisplayOrder" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DisplayOrder" class="form-control" />
                <span asp-validation-for="DisplayOrder" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" asp-route-id="@Model.BranchID">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
