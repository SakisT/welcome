@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model IEnumerable<welcome.Models.Hotel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @if ((ViewBag.ActiveHotelGroupID ?? Guid.Empty) != Guid.Empty)
    {
        <a asp-action="Create" asp-route-id="@((Guid)ViewBag.ActiveHotelGroupID)">Create New</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dealer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpirationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HotelDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPayingSupport)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-controller="Branches" asp-action="Index" asp-route-id="@item.HotelID">@item.Name</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dealer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpirationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HotelDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPayingSupport)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HotelID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HotelID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HotelID">Delete</a> |
                <a asp-action="Index" asp-controller="RoomTypes" asp-route-id="@item.HotelID">Room Types</a>
            </td>
        </tr>
}
    </tbody>
</table>
